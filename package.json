{
  "name": "ai-ci",
  "version": "1.0.0",
  "description": "Automate GitHub issues by running them through claude.ai/code and creating PRs",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "playwright": "node playwright-automation.mjs",
    "puppeteer": "node puppeteer-automation.mjs",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check": "node --check playwright-automation.mjs && node --check puppeteer-automation.mjs"
  },
  "bin": {
    "ai-ci-playwright": "./playwright-automation.mjs",
    "ai-ci-puppeteer": "./puppeteer-automation.mjs"
  },
  "keywords": [
    "automation",
    "github",
    "claude",
    "ai",
    "ci"
  ],
  "author": "",
  "license": "Unlicense",
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "eslint": "^9.39.0",
    "playwright": "^1.56.1",
    "puppeteer": "^24.27.0",
    "yargs": "^18.0.0"
  },
  "dependencies": {
    "playwright-extra": "^4.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2"
  }
}
